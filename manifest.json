{
  "manifest_version": 3,
  "name": "Vocabulary Learning Note",
  "version": "1.0.0",
  "description": "Advanced vocabulary learning tool with quiz features, progress tracking, and smart word management. Save words while browsing and review them with interactive quizzes.",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "webNavigation",
    "contextMenus"
  ],
  "host_permissions": [
    "https://api.dictionaryapi.dev/*",
    "https://api.datamuse.com/*"
  ],
  "background": {
    "service_worker": "src/js/background.js"
  },


  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "exclude_matches": [
        "https://chrome.google.com/*"
      ],
      "js": ["src/js/content.js"],
      "css": ["src/css/content.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/assets/images/*",
        "locale/*",
        "src/html/today-voca.html",
        "src/css/today-voca.css",
        "src/js/today-voca.js",
        "src/html/today-voca-quiz.html",
        "src/css/today-voca-quiz.css",
        "src/js/today-voca-quiz.js",
        "src/js/srs-system.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "src/html/popup.html",
    "default_title": "Vocabulary Learning Note",
    "default_icon": {
      "16": "src/assets/icons/icon16.png",
      "48": "src/assets/icons/icon48.png",
      "128": "src/assets/icons/icon128.png"
    }
  },

  "commands": {
    "save-word": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Save selected word"
    }
  },
  "icons": {
    "16": "src/assets/icons/icon16.png",
    "48": "src/assets/icons/icon48.png",
    "128": "src/assets/icons/icon128.png"
  }
} 